/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
// main-color = #fa5b4d
// background-color = #faf9f0
col         = #FF0000
colDark     = #BF3030
colDarker   = #A60000
colLight    = #FF4040
colLighter  = #FF7373
colLightest = #FFDBDB


body
  font-family "Trebuchet MS", Arial, Helvetica, sans-serif
  background-color colLightest //background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color colLightest
  font-size 36px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color colDarker
  border-bottom 1px solid darken(colLighter, 30%)
  text-shadow 0px -1px 0px darken(colLighter, 30%)

.content
  width 1000px
  margin 50px auto
  overflow hidden

table
  width 100%
  border-collapse collapse

th, td
  max-width 250px
  min-width 120px
  text-align center
  font-size 1em
  border 1px solid colLighter
  padding 3px 7px 2px 7px

th
  font-size 1.1em
  padding-top 5px
  padding-bottom 4px
  background-color colLighter
  color white

td.name
  text-align left

tr.oddRow td
  color black
  background-color colLighter

tr.evenRow td
  color black
  background-color colLightest

a:link
  color black
a:hover
  font-weight bold
a:visited
  color black
a:selected
  color black

